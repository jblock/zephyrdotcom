desc "jtb"
task :jtb => :buildtest do
	puts "Deploying to server"
	system "rsync -rtzv --progress --delete _site/ /Users/jasontheblock/code/jblockdotcom/projects/zephyr && cd /Users/jasontheblock/code/jblockdotcom/ && rake deploy"
	puts "Done!"
end
